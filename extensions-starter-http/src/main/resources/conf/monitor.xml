<monitor>
    <name>HttpStarterMonitor</name>
    <type>managed</type>
    <description>Starter template to gather data from an http source</description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>HttpStarterMonitor Monitor Run Task</name>
        <display-name>HttpStarterMonitor Task</display-name>
        <description>HttpStarterMonitor Task</description>
        <type>java</type>
        <execution-timeout-in-secs>120</execution-timeout-in-secs>
        <task-arguments>
            <argument name="config-file" is-required="true" default-value="monitors/StarterMonitor/config.yml" />
        </task-arguments>
        <java-task>
            <classpath>extensions-starter-http.jar</classpath>
            <impl-class>com.appdynamics.monitors.StarterMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>
